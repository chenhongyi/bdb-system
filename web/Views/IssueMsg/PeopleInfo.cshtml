@using static web.Models.AllEnum
@model web.Models.Person.ResumeViewModel

@{
    ViewData["Title"] = "发布个人简历";
}

<form asp-controller="IssueMsg" asp-action="PeopleInfo" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <h2 class="text-center">发布个人简历</h2>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" required="required" class="form-control" placeholder="如:男32岁擅长开拖拉机" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" required="required" class="form-control" placeholder="请输入姓名" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="BirthDay" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="BirthDay" required="required" class="form-control" type="date" placeholder="生日" />
            <span asp-validation-for="BirthDay" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control"></select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="JiGuan" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="JiGuan" required="required" class="form-control" placeholder="如:黑龙江省鸡西市" />
            <span asp-validation-for="JiGuan" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CurPoint" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="CurPoint" required="required" class="form-control" placeholder="如:八五六农场" />
            <span asp-validation-for="CurPoint" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group">
        <label asp-for="WorkPoint" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="WorkPoint" required="required" class="form-control" placeholder="如:八五六农场" />
            <span asp-validation-for="WorkPoint" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Desc" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Desc" class="form-control" placeholder="请输入简单介绍,比如擅长什么工作" rows="5">
            </textarea>
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Phone" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Phone" required="required" class="form-control" id="phone" type="tel" placeholder="请输入手机号" />
            <span asp-validation-for="Phone" class="text-danger"></span>
            @*<input type="button" class="btn btn-default" id="btn" value="免费获取验证码" onclick="sendCaptcha()" />*@
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" id="issue" class="btn btn-default">立即发布</button>
        </div>
    </div>
</form>
