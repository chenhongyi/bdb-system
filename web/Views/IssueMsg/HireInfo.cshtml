@using static web.Models.AllEnum
@model web.Models.Person.HireViewModel

@{
    ViewData["Title"] = "发布用工信息";
}

<form asp-controller="IssueMsg" asp-action="HireInfo" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <h2 class="text-center">发布用工信息</h2>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" required="required" class="form-control" placeholder="请填写标题" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Price" required="required" class="form-control" type="number" pattern="[0-9]*" placeholder="请填写价格(元/吨)" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PersonCount" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PersonCount" required="required" class="form-control" type="number" pattern="[0-9]*" placeholder="需求多少人" />
            <span asp-validation-for="PersonCount" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="WorkType" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="WorkType" asp-items="@Html.GetEnumSelectList<WorkType>()" class="form-control"></select>
            <span asp-validation-for="WorkType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="GenderRequired" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="GenderRequired" asp-items="@Html.GetEnumSelectList<GenderRequired>()" class="form-control"></select>
            <span asp-validation-for="GenderRequired" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AgeRequired" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="AgeRequired" asp-items="@Html.GetEnumSelectList<AgeRequired>()" class="form-control"></select>
            <span asp-validation-for="AgeRequired" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="WorkTime" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="WorkTime" required="required" class="form-control" placeholder="工作多久(多少天或多少月)" />
            <span asp-validation-for="WorkTime" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PayType" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="PayType" asp-items="@Html.GetEnumSelectList<PayType>()" class="form-control"></select>
            <span asp-validation-for="PayType" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group">
        <label asp-for="WorkStrong" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="WorkStrong" asp-items="@Html.GetEnumSelectList<WorkStrong>()" class="form-control"></select>
            <span asp-validation-for="WorkStrong" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="StartTime" required="required" class="form-control" type="date" placeholder="请选择开始时间" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Desc" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Desc" class="form-control" placeholder="请输入描述信息" rows="5">
            </textarea>
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" required="required" class="form-control" placeholder="请输入姓名" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Phone" required="required" class="form-control" id="phone" type="tel" placeholder="请输入手机号" />
            <span asp-validation-for="Phone" class="text-danger"></span>
            @*<input type="button" class="btn btn-default" id="btn" value="免费获取验证码" onclick="sendCaptcha()" />*@
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" id="issue" class="btn btn-default">立即发布</button>
        </div>
    </div>
</form>
